rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Função auxiliar para verificar se é o admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'mateusmachado11m@gmail.com';
    }
    
    // Função auxiliar para verificar se está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Concursos (rascunhos) - apenas admin
    match /concursos/{concursoId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
    
    // Concursos Publicados - todos podem ler, apenas admin escreve
    match /concursos_publicados/{concursoId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Configuração - todos podem ler, apenas admin escreve
    match /config/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Palpites dos usuários
    match /palpites/{palpiteId} {
      // Usuário pode ler seus próprios palpites
      allow read: if isAuthenticated() && request.auth.uid == resource.data.userId;
      // Usuário pode criar/atualizar seus próprios palpites
      allow create, update: if isAuthenticated() && request.auth.uid == request.resource.data.userId;
      // Apenas o dono pode deletar
      allow delete: if isAuthenticated() && request.auth.uid == resource.data.userId;
    }
    
    // Ranking (gerado automaticamente)
    match /ranking/{userId} {
      // Todos podem ler
      allow read: if true;
      // Apenas o sistema pode escrever (via admin)
      allow write: if isAdmin();
    }
    
    // Alertas do sistema de monitoramento
    match /alertas/{alertaId} {
      // Apenas admin pode ler e escrever
      allow read, write: if isAdmin();
    }
    
    // Dados da Loteca (compatibilidade - deprecated)
    match /loteca/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Bloquear tudo que não foi explicitamente permitido
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
